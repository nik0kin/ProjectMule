{
  "name": "ProjectMule",
  "version": "0.1.0",
  "description": "(Abstract) Asyncronous Strategy (Game) Server",
  "main": "server.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "start": "mkdir logs & forever start -a -p . -o ./logs/forever-out.log -e ./logs/forever-err.log -l ./logs/forever.log server.js",
    "stop": "forever stop server.js",
    "test": "grunt",
    "debug": "node --debug port 5858 server.js"
  },
  "dependencies": {
    "express": "3.x",
    "mongoose": "~3.8.0",
    "q": "~0.9.7",
    "mongoose-q": "0.0.4",
    "async": "~0.2.9",
    "notifier": "~0.1.1",
    "passport": "latest",
    "passport-local": "latest",
    "connect-mongo": "latest",
    "connect-flash": "latest",
    "winston": "latest",
    "forever": "*",
    "underscore": "*"
  },
  "devDependencies": {
    "mocha": "*",
    "should": "*",
    "grunt-cli": "*",
    "time-grunt": "*",
    "grunt-simple-mocha": "~0.4.0",
    "grunt-contrib-watch": "~0.5.3",
    "grunt-contrib-jshint": "~0.7.1",
    "supertest": "0.8.2"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/nik0kin/ProjectMule"
  },
